<div class="col-md-6 mx-auto">
    <div class="jumbotron text-light text center">
        <div class="card-header">
            <h3 class="card-title">Account Login</h3>
        </div>
        <div class="card-body">
            <form action="{{ prefixApp }}/users-signin" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control rounded-lg" name="email" placeholder="Email" autofocus required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control rounded-lg" name="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block rounded-lg button-shadow">
                    <i class="fas fa-sign-in-alt mr-2"></i>
                    Signin
                </button>
            </form>
        </div>
    </div>
</div>
<div class="col-md-6 mx-auto">
    <div class="jumbotron text-light text center">
        <div class="card-header">
            <h3>Account Register</h3>
        </div>
        <div class="card-body">
            <form action="/users/signup" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control rounded-lg" name="name" placeholder="User Name" autofocus required value="{{ name }}">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control rounded-lg" name="email" placeholder="Email" required value="{{ email }}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control rounded-lg" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control rounded-lg" name="confirm_password" placeholder="Confirm Password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block rounded-lg button-shadow">
                    <i class="fas fa-user-plus mr-2"></i>
                    Signup
                </button>
            </form>
        </div>
    </div>
</div>